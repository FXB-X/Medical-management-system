<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TMedicalDrugsStorageMapper">
    
    <resultMap type="TMedicalDrugsStorage" id="TMedicalDrugsStorageResult">
        <result property="id"    column="id"    />
        <result property="drugsid"    column="drugsId"    />
        <result property="no"    column="no"    />
        <result property="updateTime"    column="updateTime"    />
        <result property="operator"    column="operator"    />

        <!--多对一 -->
        <association property="TMedicalDrugsInfo" javaType="com.ruoyi.system.domain.TMedicalDrugsInfo">
            <result property="id"    column="id"    />
            <result property="name"    column="name"    />
            <result property="specifications"    column="Specifications"    />
            <result property="unit"    column="unit"    />
            <result property="description"    column="description"    />
            <result property="status"    column="status"    />
            <result property="buyunitprice"    column="buyUnitPrice"    />
            <result property="sellunitprice"    column="sellUnitPrice"    />
            <result property="operator"    column="operator"    />
            <result property="operatortime"    column="operatorTime"    />
        </association>

    </resultMap>

    <sql id="selectTMedicalDrugsStorageVo">
        select id, drugsId, no, updateTime, operator from t_medical_drugs_storage
    </sql>

    <sql id="infos">
         select a.id infoid ,a.`name`,b.id, b.drugsId ,b.`no`,b.updateTime ,b.operator from
            t_medical_drugs_info a left outer join t_medical_drugs_storage b on a.id= b.drugsId
            where  1=1
    </sql>

    <select id="selectTMedicalDrugsStorageList" parameterType="TMedicalDrugsStorage" resultMap="TMedicalDrugsStorageResult">
        <include refid="selectTMedicalDrugsStorageVo"/>
        <where>  
            <if test="drugsid != null  and drugsid != ''"> and drugsId = #{drugsid}</if>
            <if test="no != null "> and no = #{no}</if>
            <if test="updateTime != null "> and updateTime = #{updateTime}</if>
            <if test="operator != null  and operator != ''"> and operator = #{operator}</if>
        </where>
    </select>
    

    <select id="selectTMedicalDrugs" resultType="com.ruoyi.system.domain.TMedicalDrugsStorage">
        <include refid="infos"/>
        and a.id=drugsId
        <if test="name != null  and name != ''"> and name like  concat('%',#{name},'%')</if>
        <if test="drugsid != null  and drugsid != ''"> and drugsId = #{drugsid}</if>
        <if test="no != null "> and no = #{no}</if>
        <if test="updateTime != null "> and updateTime = #{updateTime}</if>
        <if test="operator != null  and operator != ''"> and operator = #{operator}</if>
    </select>
    <select id="selectTMedicalDrugsById" resultType="com.ruoyi.system.domain.TMedicalDrugsStorage">
        <include refid="selectTMedicalDrugsStorageVo"/>
        <where>
            <if test="drugsid != null  and drugsid != ''"> and drugsId = #{drugsid}</if>
        </where>
    </select>
    <select id="selectTMedicalDrugsStorageById" resultType="com.ruoyi.system.domain.TMedicalDrugsStorage">
            <include refid="infos"/>
           and b.id in
            <foreach item="id" collection="array" open="(" separator="," close=")">
                #{id}
            </foreach>

    </select>


    <insert id="insertTMedicalDrugsStorage" parameterType="TMedicalDrugsStorage">
        insert into t_medical_drugs_storage
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="drugsid != null">drugsId,</if>
            <if test="no != null">no,</if>
            <if test="updateTime != null">updateTime,</if>
            <if test="operator != null">operator,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="drugsid != null">#{drugsid},</if>
            <if test="no != null">#{no},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="operator != null">#{operator},</if>
         </trim>
    </insert>

    <update id="updateTMedicalDrugsStorage" parameterType="TMedicalDrugsStorage">
        update t_medical_drugs_storage
        <trim prefix="SET" suffixOverrides=",">
            <if test="drugsid != null">drugsId = #{drugsid},</if>
            <if test="no != null">no = #{no},</if>
            <if test="updateTime != null">updateTime = #{updateTime},</if>
            <if test="operator != null">operator = #{operator},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTMedicalDrugsStorageById" parameterType="String">
        delete from t_medical_drugs_storage where id = #{id}
    </delete>

    <delete id="deleteTMedicalDrugsStorageByIds" parameterType="String">
        delete from t_medical_drugs_storage where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>